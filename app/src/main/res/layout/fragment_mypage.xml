<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mypage.mypage"
    android:id="@+id/fg_mypage">

    <!-- TODO: Update blank fragment layout -->
<!--    <TextView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:text="mypage fragment" />-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30sp"
                android:layout_marginTop="30sp"
                android:text="마이페이지"
                android:textColor="#000"
                android:textSize="23dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30sp"
                android:layout_marginTop="15sp"
                android:text="내 프로필을 수정하실수 있습니다."
                android:textColor="#808080"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10sp"
                android:layout_marginTop="20sp"
                android:orientation="horizontal"
                android:padding="20sp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/mypage_photo"
                    android:layout_width="60sp"
                    android:layout_height="60sp" />

                <TextView
                    android:id="@+id/tvNickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:text="..."
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvNickname2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="님 "
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e5e5e5" />

            <!--        프로필 편집하기 시작 -->
            <LinearLayout
                android:id="@+id/tvProfileEditButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30sp"
                android:layout_marginVertical="15sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvProfileEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="프로필 수정하러가기"
                    android:textColor="#000"
                    android:textSize="20sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e5e5e5" />

            <!--        프로필 편집하기 끝 -->

            <!--        프로필 편집하기 시작 -->
            <LinearLayout
                android:id="@+id/tvPwEditButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30sp"
                android:layout_marginVertical="15sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvPPwEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="비밀번호 수정하러가기"
                    android:textColor="#000"
                    android:textSize="20sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e5e5e5" />

            <!--        프로필 편집하기 끝 -->




            <!--        프로필 편집하기 시작 -->
            <LinearLayout
                android:id="@+id/tvaddCartButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30sp"
                android:layout_marginVertical="15sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvaddCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="장바구니 보러가기"
                    android:textColor="#000"
                    android:textSize="20sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e5e5e5" />
            <LinearLayout
                android:id="@+id/tvaddPaymentButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30sp"
                android:layout_marginVertical="15sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvaddPayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="결제목록 보러가기"
                    android:textColor="#000"
                    android:textSize="20sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e5e5e5" />
            <LinearLayout
                android:id="@+id/tvaddChatButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30sp"
                android:layout_marginVertical="15sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvaddChat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="상담내역 보러가기"
                    android:textColor="#000"
                    android:textSize="20sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e5e5e5" />

            <!--        프로필 편집하기 끝 -->

            <!--        내가쓴글보기 시작 -->
            <LinearLayout
                android:id="@+id/tvMyContentViewBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30sp"
                android:layout_marginVertical="15sp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvMyContentView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="내가 쓴 글 보기"
                    android:textColor="#000"
                    android:textSize="20sp" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RvMyContentView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30sp"
                android:visibility="gone"></androidx.recyclerview.widget.RecyclerView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e5e5e5"
                android:visibility="gone"/>
            <!--        내가쓴글보기 끝 -->

            <!--        <Button-->
            <!--            android:id="@+id/btn_addCart"-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:text="장바구니 보러가기"-->
            <!--            android:visibility="visible"-->
            <!--            android:layout_marginTop="30sp"-->
            <!--            android:layout_margin="20sp"/>-->


            <Button
                android:id="@+id/kakaologout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:layout_marginTop="30sp"
                android:text="로그아웃"
                android:textSize="25sp"
                android:visibility="visible" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>