<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".partner.partner_register_product"
    android:padding="30sp"
    android:orientation="vertical">
    <!--매출현황 시작-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="현재 판매중인 상품"
        android:textColor="#000"
        android:textSize="20sp"
        android:textFontWeight="800"
        android:layout_marginTop="10sp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/partner_register_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp">
    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/partner_register_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="상품등록하기"
        android:layout_marginVertical="10sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_gravity="bottom">
        <TextView
            android:id="@+id/partner_register_Home_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="홈"
            android:textColor="#000"
            android:textSize="20sp"
            android:textFontWeight="800"
            android:layout_marginTop="10sp"
            android:layout_weight="1"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/partner_register_product_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상품 등록"
            android:textColor="#000"
            android:textSize="20sp"
            android:textFontWeight="800"
            android:layout_marginTop="10sp"
            android:layout_weight="1"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/partner_register_delevery_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="배송관리"
            android:textColor="#000"
            android:textSize="20sp"
            android:textFontWeight="800"
            android:layout_marginTop="10sp"
            android:layout_weight="1"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/partner_register_chatt_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="고객상담방"
            android:textColor="#000"
            android:textSize="20sp"
            android:textFontWeight="800"
            android:layout_marginTop="10sp"
            android:layout_weight="1"
            android:gravity="center"
            />
    </LinearLayout>

</LinearLayout>