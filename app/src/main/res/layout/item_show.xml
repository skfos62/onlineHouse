<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="0dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250sp"
        app:cardCornerRadius="3sp"
        android:backgroundTint="#e5e5e5"
        >

        <ImageView
            android:id="@+id/item_show_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#f6e1e1"
            android:src="@drawable/imageup2"
            android:scaleType="centerCrop"/>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_show_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="협소주택에 관한 이미지  "
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_marginTop="30sp"
        />
    <TextView
        android:id="@+id/item_show_con"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="협소주택에 관한 사진들을 모았습니다."
        android:textSize="15dp"
        android:textColor="#808080"
        android:layout_marginTop="8sp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e5e5e5"
        android:layout_marginVertical="25sp"/>

</LinearLayout>
