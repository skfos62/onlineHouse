<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".community_image_tagging_URL"
    android:orientation="vertical"
    android:layout_marginVertical="20sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="25dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:textColor="#000"
            android:text="태그 목록 작성 "
            android:layout_weight="1"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/community_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/xmark"
            android:layout_gravity="right"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15dp"/>


    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:gravity="center"
        android:text="내가 산 가구의 이름을 공유해주세요!"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="80sp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60sp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tagging_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="이름입력"
            android:backgroundTint="#000"
            app:backgroundTint="#000"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/community_write_image_tagging"
        android:layout_marginHorizontal="60sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="20dp"
        android:paddingVertical="10sp"
        android:text="태그하기"
        android:textSize="15sp"
        app:backgroundTint="#000"
        app:cornerRadius="8dp" />

</LinearLayout>